{
  "name": "goplan",
  "version": "0.0.1",
  "description": "Event planner",
  "main": "index.js",
  "scripts": {
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "setup": "npm install && concurrently \"npm:install:client\" \"npm:install:server\"",
    "start:server": "cd server && npm run start:dev",
    "start:client": "cd client && npm start",
    "serve": "concurrently \"npm:start:server\" \"npm:start:client\"",
    "test:bdd": "cucumber-js --require cucumber.conf.js --require test/acceptance/stepDefinitions --format @cucumber/pretty-formatter"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^6.2.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.2.1",
    "@cucumber/pretty-formatter": "^1.0.0-alpha.0",
    "chromedriver": "^91.0.0",
    "mongodb": "^3.6.9",
    "nightwatch": "^1.6.4",
    "nightwatch-api": "^3.0.2"
  }
}
